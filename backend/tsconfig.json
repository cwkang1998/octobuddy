{
	"compilerOptions": {
		"lib": ["esnext"],
		"rootDir": "src",
		"outDir": "dist",
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"target": "es2020",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true
	},
	"include": ["src/*"],
	"exclude": ["node_modules"]
}
